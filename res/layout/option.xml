<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="#FFFFFF">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="1">
		<TextView android:id="@+id/TextView01" android:layout_height="wrap_content"
			android:text="テンポ" android:textSize="25dip" android:textColor="#000000"
			android:layout_marginLeft="20dip" android:layout_gravity="top|left"
			android:layout_weight="1" android:layout_marginTop="20dip"
			android:layout_width="fill_parent"></TextView>
		<EditText android:text="@+id/EditText01" android:layout_height="wrap_content" android:layout_gravity="top|right"
			android:layout_marginTop="20dip" android:layout_marginRight="10dip"
			android:layout_weight="1" android:gravity="right"
			android:layout_width="fill_parent" android:id="@+id/bpmEditText" android:selectAllOnFocus="true" android:inputType="phone" android:numeric="integer"></EditText>
	</LinearLayout>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"
		android:text="OK" android:textSize="30dip" android:textColor="#FFFFFF"
		android:id="@+id/opOKbtn" android:paddingLeft="50dip"
		android:paddingRight="50dip"></Button>
</LinearLayout>
